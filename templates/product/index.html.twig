{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}


    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand">TABLERO DE PRODUCTOS</a>


        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_product') }}">Inicio </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('insertProduct') }}">Nuevo producto </a>
                </li>

            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>



<div class="container">
    <table class="table table-bordered  table-hover table-striped">
        <thead>
        <tr>
            <td data-breakpoints="xs sm"> CODE </td>
            <td data-breakpoints="xs sm"> NAME </td>
            <td data-breakpoints="xs sm"> DESCRIPTION </td>
            <td data-breakpoints="xs sm"> BRAND </td>
            <td data-breakpoints="xs sm"> CATEGORY </td>
            <td data-breakpoints="xs sm"> PRICE </td>
            <td data-breakpoints="xs sm"> ACTION </td>

        </tr>
        </thead>
        <tbody>
        {% for Products in Products %}

        <tr>
            <td> {{Products.code}} </td>
            <td> {{Products.name}} </td>
            <td> {{Products.description}} </td>
            <td> {{Products.brand}} </td>
            <td> {{Products.category}} </td>
            <td> {{Products.price}} </td>
            <td>
                <a href="{{ path('removeProduct', {'id': Products.id}) }}" class="btn btn-warning"><span class="glyphicon glyphicon-pencil"></span> Editar</a>
                <a href="{{ path('removeProduct', {'id': Products.id}) }}" class="btn btn-info"><span class="glyphicon glyphicon-eye-open"></span> Borrar</a>
            </td>
        </tr>

        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
